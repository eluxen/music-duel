<%= form_for(@artist) do |f| %>
  <% if @artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

      <ul>
      <% @artist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :song_url %><br>
    <%= f.text_field :default_song_url %>
  </div>
  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br>
    <%= f.autocomplete_field :tag_list, autocomplete_tag_name_artists_path, 'data-delimiter' => ',', :data => { :no_matches_label => '' } %>
  </div>
  <div class="actions">
    <%= button_submit_tag %>
  </div>
<% end %>

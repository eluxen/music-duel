<h1 class='text-center'>Listing artists</h1>

<table class='table table-hover center' style='width: 80%'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Default Song Url</th>
      <th></th>
    </tr>
  </thead>

  <tbody class='table-striped'>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= link_to artist.default_song_url, artist.default_song_url %></td>
        <td> <%= button_group do %>
          <%= edit_pill_button_link_to 'Edit', edit_artist_path(artist) %>
          <%= remove_pill_negative_button_link_to 'Delete', artist, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class='row'>
  <div class='col-lg-offset-1 col-lg-5'>
    <%= add_button_link_to 'New Artist', new_artist_path %>
    <%= button_link_to 'Manage Duels', duels_path %>
  </div>
</div>
